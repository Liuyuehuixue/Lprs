<view class="screen">
  <van-cell title="测试表选择:" size="large" class="title"/>
  <van-dropdown-menu class="menu">
    <van-dropdown-item class="menu_item" model:value="{{optionvalue}}" options="{{ options }}" bind:change="tableChange" />
  </van-dropdown-menu>
</view>

<view class="screen" hidden="{{addmodel}}" type="primary" style="border:none;">
  <van-cell title="次数选择:" size="large" class="title" type="primary" style="border:none;"/>
  <van-cell value="请选择" size="large" is-link class="choose" type="primary" style="border:none;"/>
  <van-dropdown-menu class="menu">
    <van-dropdown-item class="menu_item" model:value="{{timesvalue}}" options="{{ times }}" bind:change="timeChange" />
  </van-dropdown-menu>
</view>

