<block wx:for="{{showList}}" wx:for-index="index"  wx:key="index">
  <van-cell-group>
      <van-cell title="{{index+1}}. {{item.survey_project_cnname}}" border="{{ false }}"/>
      <!-- <van-cell title="{{index+1}}. {{item.survey_project_cnname}}" label="类型: {{item.survey_sub_range}}" border="{{ false }}"/> -->
      <van-radio-group disabled="{{!disabled}}" value="{{ item.score }}" bindchange = "radioChange" data-index="{{ index }}" direction="horizontal">
        <van-radio name="P">P</van-radio>
        <van-radio name="F">F</van-radio>
        <van-radio name="E">E</van-radio>
        <van-radio name="X">X</van-radio>
      </van-radio-group>
  </van-cell-group>
</block>
<view class="btns">
  <button  class="savebtn" bindtap="save" hidden="{{!disabled}}">暂存</button>
  <button  class="submitbtn" bindtap="submit" hidden="{{!disabled}}">提交</button>
</view>



